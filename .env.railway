# Railway Environment Variables Template
# Copy these to your Railway project environment variables

# Django Settings
DJANGO_SETTINGS_MODULE=backend.settings.production
SECRET_KEY=your-super-secret-key-here-change-this
DEBUG=False
ALLOWED_HOSTS=*

# Database (Railway will provide DATABASE_URL automatically)
# DATABASE_URL will be set by Railway PostgreSQL service

# CORS Settings
CORS_ALLOW_ALL_ORIGINS=True

# Security Settings (set to False for initial testing, True for production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Email Settings (optional for now)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Payment Settings (use test keys for now)
RAZORPAY_KEY_ID=rzp_test_placeholder
RAZORPAY_KEY_SECRET=placeholder_secret
RAZORPAY_WEBHOOK_SECRET=placeholder_webhook_secret

# Logging
DJANGO_LOG_LEVEL=INFO